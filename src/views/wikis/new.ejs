<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container" style="margin-top: 100px;">

      <h1>New Wiki</h1>

      <form action="/wikis/create" method="post">
        <div class="form-group">
          <label for="title">Wiki title</label>
          <input type="text" class="form-control" name="title" aria-describedby="titleHelp" placeholder="Enter Title">
        </div>
        <div class="form-group">
          <label for="description">Body</label>
          <textarea rows="4" class="form-control" name="body" placeholder="Enter Text"></textarea>
        </div>
        <% if(currentUser.role == "standard") { %>
        <button type="submit" class="btn btn-primary">Submit Public Wiki</button>
          <% } else { %>
          <div class="checkbox">
            <label><input type="checkbox" name="private" value="isPrivate">Make Private</label>
          </div>
          <button type="submit" class="btn btn-primary">Submit Wiki</button>


        <% }%>
      </form>


    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>
